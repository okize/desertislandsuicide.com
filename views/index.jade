extends layout

block content

  - if (user && user.profile.name)
    nav.login-nav
      ul
        li: a(href='/logout') Logout

  - else
    nav.login-nav
      ul
        li: a(href='/auth/facebook') Sign in with Facebook
        li: a(href='/auth/twitter') Sign in with Twitter
        li: a(href='/auth/google') Sign in with Google

  div.wrapper(role="main")
    ul
      for band in bands
        li #{band.name}
